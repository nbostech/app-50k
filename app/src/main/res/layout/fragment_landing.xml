<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.app50knetwork.MainActivity"
    tools:showIn="@layout/app_bar_main"
    android:background="@drawable/bg_app_nodp">
    <ImageView
        android:id="@+id/logoDashboard"
        android:layout_alignParentLeft="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/nav_header_vertical_spacing"
        android:src="@drawable/ic_logo_nodp"
        />
    <RelativeLayout android:id="@+id/registerLinkRL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logoDashboard"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <ImageView
            android:id="@+id/investorImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/nav_header_vertical_spacing"
            android:layout_weight="1"
            android:src="@drawable/ic_investor"
            android:clickable="true"/>

        <ImageView
            android:id="@+id/startUpImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="@dimen/nav_header_vertical_spacing"
            android:layout_weight="1"
            android:src="@drawable/ic_startup"
            android:layout_alignParentRight="true"
            android:clickable="true"/>
    </RelativeLayout>

</RelativeLayout>
