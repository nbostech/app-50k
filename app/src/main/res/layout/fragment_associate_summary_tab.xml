<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.wavelabs.nfund.AssociateSummaryTabFragment">


    <TextView
        android:id="@+id/associateExpAndExpLabelTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:text="EXPERIENCE AND EXPERTISE"
        android:textAllCaps="true" />

    <EditText
        android:id="@+id/associateExpAndExpET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/associateExpAndExpLabelTV"
        android:layout_margin="10dp"
        android:background="@drawable/rounded_corner"
        android:inputType="text|textMultiLine"
        android:padding="10dp" />


    <TextView
        android:id="@+id/associateSummaryLabelTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/associateExpAndExpET"
        android:layout_marginLeft="12dp"
        android:text="SUMMARY"
        android:textAllCaps="true" />

    <EditText
        android:id="@+id/associateSummaryEV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/associateSummaryLabelTV"
        android:layout_margin="10dp"
        android:background="@drawable/rounded_corner"
        android:inputType="text|textMultiLine"
        android:padding="10dp" />


    <Button
        android:id="@+id/associateSubmitBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/associateSummaryEV"
        android:layout_margin="10dp"
        android:background="@drawable/button_feedback"
        android:text="Update"
        android:textColor="#ffffff"
        android:textStyle="bold" />

</RelativeLayout>
