<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.wavelabs.nfund.AssociateSocialProfileTabFragment">

    <TextView
        android:id="@+id/associateSocialFBLabelTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:text="FACEBOOK"
        android:textAllCaps="true" />

    <EditText
        android:id="@+id/associateSocialFBET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/associateSocialFBLabelTV"
        android:layout_margin="10dp"
        android:background="@drawable/rounded_corner"
        android:padding="10dp" />

    <TextView
        android:id="@+id/associateSocialLILabelTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/associateSocialFBET"
        android:layout_marginLeft="12dp"
        android:text="LINKEDIN"
        android:textAllCaps="true" />

    <EditText
        android:id="@+id/associateSocialLIET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/associateSocialLILabelTV"
        android:layout_margin="10dp"
        android:background="@drawable/rounded_corner"
        android:padding="10dp" />

    <TextView
        android:id="@+id/associateSocialTLabelTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/associateSocialLIET"
        android:layout_marginLeft="12dp"
        android:text="TWITTER"
        android:textAllCaps="true" />

    <EditText
        android:id="@+id/associateSocialTET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/associateSocialTLabelTV"
        android:layout_margin="10dp"
        android:background="@drawable/rounded_corner"
        android:padding="10dp" />

    <TextView
        android:id="@+id/associateSocialOLabelTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/associateSocialTET"
        android:layout_marginLeft="12dp"
        android:text="OTHER"
        android:textAllCaps="true" />

    <EditText
        android:id="@+id/associateSocialOET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/associateSocialOLabelTV"
        android:layout_margin="10dp"
        android:background="@drawable/rounded_corner"
        android:padding="10dp" />

    <Button
        android:id="@+id/associateSubmitBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/associateSocialOET"
        android:layout_margin="10dp"
        android:background="@drawable/button_feedback"
        android:text="Update"
        android:textColor="#ffffff"
        android:textStyle="bold" />

</RelativeLayout>
