<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EFEFEF"
    android:orientation="vertical"
    android:paddingTop="16dp"
    android:paddingLeft="8dp"
    android:paddingBottom="8dp"
    android:paddingRight="8dp"
    tools:context="com.app50knetwork.ViewStartupFragment">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context="com.app50knetwork.ViewStartupFragment">

            <!-- TODO: Update blank fragment layout -->
            <LinearLayout
                android:id="@+id/linerLayout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/companyLogoIV"
                    android:layout_width="60dp"
                    android:layout_height="100dp"
                    android:background="@drawable/border_image"
                    android:padding="4dp"
                    android:layout_weight=".4" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:layout_weight=".6">

                    <TextView
                        android:id="@+id/companyNameTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="8dp"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/descriptionTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/companyNameTV"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="8dp" />

                    <TextView
                        android:id="@+id/categoryTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/descriptionTV"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="8dp"
                        android:textStyle="bold"
                        android:drawablePadding="3dp"
                        android:drawableLeft="@android:drawable/btn_star_big_off" />


                </RelativeLayout>


            </LinearLayout>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/linerLayout1"
                android:id="@+id/tableLayout"
                android:paddingTop="36dp">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView

                        android:id="@+id/companyWebsiteTV"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:layout_marginTop="4dp"
                        android:layout_weight="1"
                        android:background="@color/finestWhite"
                        android:drawableLeft="@android:drawable/ic_btn_speak_now"
                        android:singleLine="true"
                        android:drawablePadding="2dp"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp" />

                    <TextView

                        android:id="@+id/empStrengthTV"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:layout_marginTop="4dp"
                        android:layout_weight="1"
                        android:background="@color/finestWhite"
                        android:drawableLeft="@android:drawable/ic_btn_speak_now"
                        android:singleLine="true"
                        android:drawablePadding="2dp"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView

                        android:id="@+id/foundedDateTV"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:layout_marginTop="4dp"
                        android:layout_weight="1"
                        android:background="@color/finestWhite"
                        android:drawableLeft="@android:drawable/ic_btn_speak_now"
                        android:singleLine="true"
                        android:drawablePadding="2dp"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp" />

                    <TextView

                        android:id="@+id/locationTV"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:layout_marginTop="4dp"
                        android:layout_weight="1"
                        android:background="@color/finestWhite"
                        android:drawableLeft="@android:drawable/ic_btn_speak_now"
                        android:singleLine="true"
                        android:drawablePadding="2dp"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp" />
                </TableRow>


                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/financialInfoLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_span="2"
                        android:text="Financial Info"
                        android:textStyle="bold" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/fundingStageTV"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:layout_marginTop="4dp"
                        android:layout_weight="1"
                        android:background="@color/finestWhite"
                        android:drawableLeft="@android:drawable/ic_btn_speak_now"
                        android:singleLine="true"
                        android:drawablePadding="2dp"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp" />


                    <TextView
                        android:id="@+id/perviouCapitalTV"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:layout_marginTop="4dp"
                        android:layout_weight="1"
                        android:background="@color/finestWhite"
                        android:drawableLeft="@android:drawable/ic_btn_speak_now"
                        android:singleLine="true"
                        android:drawablePadding="2dp"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp" />


                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/monthlyNetBurnTV"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:layout_marginTop="4dp"
                        android:layout_weight="1"
                        android:background="@color/finestWhite"
                        android:drawableLeft="@android:drawable/ic_btn_speak_now"
                        android:singleLine="true"
                        android:drawablePadding="2dp"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp" />

                    <TextView
                        android:id="@+id/preMoneyValuation"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:layout_marginTop="4dp"
                        android:layout_weight="1"
                        android:background="@color/finestWhite"
                        android:drawableLeft="@android:drawable/ic_btn_speak_now"
                        android:singleLine="true"
                        android:drawablePadding="2dp"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp" />
                </TableRow>

                <View
                    android:layout_height="2dip"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:background="#FF909090" />

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/businessSummaryLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="8dp"
                        android:text="Business Summary"
                        android:textStyle="bold" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/businessSummaryTV"
                        android:layout_width="wrap_content"
                        android:layout_height="100dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="8dp"
                        android:scrollbars="vertical" />
                </TableRow>

                <View
                    android:layout_height="2dip"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:background="#FF909090" />

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/uspProductUniquenessLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="8dp"
                        android:text="USP / Product uniqueness"
                        android:textStyle="bold" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/uspProductUniqueness"
                        android:layout_width="wrap_content"
                        android:layout_height="100dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="8dp"
                        android:scrollbars="vertical" />
                </TableRow>
            </TableLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dip"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:background="#FF909090"
                android:id="@+id/viewHR"
                android:layout_below="@id/tableLayout"/>
            <TextView
                android:id="@+id/TeamLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_below="@id/viewHR"
                android:text="Team"
                android:textStyle="bold" />
            <android.support.v7.widget.RecyclerView xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/teamAssoicateListView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layoutManager="LinearLayoutManager"
                tools:listitem="@layout/fragment_team_assco"
                android:layout_below="@id/TeamLabel"
                android:background="#EFEFEF" />

        </RelativeLayout>
    </ScrollView>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/editStartupBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_gravity="top|bottom"
        android:layout_marginBottom="26dp"
        android:layout_marginRight="26dp"
        android:src="@android:drawable/ic_menu_edit" />
</RelativeLayout>