<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.wavelabs.nfund.FinancialTabFragment">

    <TextView
        android:id="@+id/fundingStageLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:text="STAGE"
        android:textAllCaps="true" />

    <Spinner
        android:id="@+id/fundingStage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/fundingStageLabel"
        android:layout_margin="10dp"
        android:background="@drawable/rounded_corner" />

    <TextView
        android:id="@+id/previousCapitalLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/fundingStage"
        android:layout_marginLeft="12dp"
        android:text="PREVIOUS CAPITAL"
        android:textAllCaps="true" />

    <EditText
        android:id="@+id/previousCapital"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/previousCapitalLabel"
        android:layout_margin="10dp"
        android:background="@drawable/rounded_corner"
        android:padding="10dp" />

    <TextView
        android:id="@+id/monthlyNetBurnLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/previousCapital"
        android:layout_marginLeft="12dp"
        android:text="MONTHLY NET BURN"
        android:textAllCaps="true" />

    <EditText
        android:id="@+id/monthlyNetBurn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/monthlyNetBurnLabel"
        android:layout_margin="10dp"
        android:background="@drawable/rounded_corner"
        android:padding="10dp" />

    <TextView
        android:id="@+id/perMoneyValutionLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/monthlyNetBurn"
        android:layout_marginLeft="12dp"
        android:text="PRE-MONEY VALUATION"
        android:textAllCaps="true" />

    <EditText
        android:id="@+id/perMoneyValution"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/perMoneyValutionLabel"
        android:layout_margin="10dp"
        android:background="@drawable/rounded_corner"
        android:padding="10dp" />

    <Button
        android:id="@+id/compSubmitBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/perMoneyValution"
        android:layout_margin="10dp"
        android:background="@drawable/button_feedback"
        android:text="Update"
        android:textColor="#ffffff"
        android:textStyle="bold" />

</RelativeLayout>
